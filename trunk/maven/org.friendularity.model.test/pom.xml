<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.friendularity</groupId>
		<artifactId>org.friendularity.modules.main</artifactId>
		<version>1.0.7</version>
		<relativePath>../org.friendularity.modules.main/pom.xml</relativePath>
	</parent>	
  <artifactId>org.friendularity.model.test</artifactId>
  <packaging>jar</packaging>

  <name>org.friendularity.model.test</name>
  <url>http://maven.apache.org</url>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
	<dependency>
		<groupId>org.cogchar</groupId>
		<artifactId>ext.bundle.opengl.jmonkey</artifactId>
	</dependency>
	<dependency>
		<!-- This dep is used in addition to ext.bundle, to help NB. -->
		<groupId>com.jme3</groupId>
		<artifactId>jME3-core</artifactId>
		<scope>provided</scope>	
		<version>${jmonkey.version}</version>
	</dependency>
	<dependency>
		<groupId>org.jdesktop</groupId>
		<artifactId>beansbinding</artifactId>
	</dependency>
	<dependency>
		<groupId>org.lwjgl.lwjgl</groupId>
		<artifactId>lwjgl</artifactId>
	</dependency>
  </dependencies>
  <build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>org.friendularity.model.test.App</mainClass>
						</manifest>
					</archive>
				</configuration>
			</plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>package-jar-with-dependencies</id>
                        <phase>package</phase>
                        <goals>
                            <goal>single</goal>
                        </goals>
                        <configuration>
                            <appendAssemblyId>false</appendAssemblyId>
                            <descriptorRefs>
                                <descriptorRef>jar-with-dependencies</descriptorRef>
                            </descriptorRefs>
                            <archive>
                                <manifest>
                                    <mainClass>org.friendularity.model.test.App</mainClass>
                                </manifest>
                            </archive>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
</project>
