	<build>
		<sourceDirectory>src/main/scala</sourceDirectory>
 
		<plugins>    
            
                        <plugin> 
                            <groupId>org.apache.maven.plugins</groupId>
                            <artifactId>maven-war-plugin</artifactId>
                            <version>2.2</version>
                            <configuration>
                            <archive>                              
                                <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>                 
                            </archive>
                            </configuration>
                        </plugin>
                     
 
                        <plugin>
                            <!-- Reconfigured based on http://leshazlewood.com/2010/09/08/osgi-maven-pax-and-web-applications/  -->
                            <groupId>org.apache.felix</groupId>
                            <artifactId>maven-bundle-plugin</artifactId>
                            <version>2.2.0</version>
                            <extensions>true</extensions>
                            <executions>
                                <execution>
                                <id>bundle-manifest</id>
                                <phase>process-classes</phase>
                                <goals>
                                    <goal>manifest</goal>
                                </goals>
                                    <configuration>
                                        <instructions>
                                            <Bundle-SymbolicName>org.friendularity.bundle.lifter</Bundle-SymbolicName>
                                            <Bundle-ClassPath>.,/WEB-INF/classes</Bundle-ClassPath> <!-- Yet we get a warning about this directory not exisiting - it appears there are some sequencing issues? (yes, I've seen others mention this too - sounds like maybe ignorable -->
                                            <Embed-Directory>/WEB-INF/lib</Embed-Directory>
                                            <Embed-Dependency>net.liftweb.*</Embed-Dependency> <!-- Thought maybe this would make LiftFilter visible - but maybe problem is visibility "outside" the war? But seems like we have that via dependency... -->
                                            <Embed-Transitive>true</Embed-Transitive> <!-- Need to understand this better, doesn't seem to have much effect -->
                                            <Import-Package>*;resolution:=optional</Import-Package> <!-- From Pax Web WAR extender examples; seems best avoided but may be required in some form -->
                                            <Web-ContextPath>${web.contextPath}</Web-ContextPath>
                                            <Webapp-Context>${web.contextPath}</Webapp-Context>
                                            <Export-Package>net.liftweb.* <!-- Thought I'd try this here just to see; need to get a little more clear on the distinction between the two <configuration> sections -->
                                            </Export-Package> 
                                        </instructions>
                                    </configuration>
                                </execution>
                            </executions>
                            <configuration>
                                <supportedProjectTypes>
                                <supportedProjectType>jar</supportedProjectType>
                                <supportedProjectType>bundle</supportedProjectType>
                                <supportedProjectType>war</supportedProjectType>
                                </supportedProjectTypes>
                                <instructions>
                                    <Export-Package>org.friendularity.bundle.lifter.*, bootstrap.*, props, net.liftweb.*,  nu.validator.*
                                    </Export-Package>
                                    <DynamicImport-Package>*</DynamicImport-Package>  <!-- This excessively horrid workaround still does not enable loading of LiftFilter - I set it back to * for now -->
                                    <Import-Package>!nu.xom.*,!org.mozilla.*,!org.specs.*,*</Import-Package>  
                                    <!-- <Bundle-Activator>org.friendularity.bundle.lifter.Activator</Bundle-Activator> Should not be needed in final product-->
                                </instructions>
                            </configuration>
                            </plugin>
                            
                            <plugin>
                                <!-- This is supposed to make it possible to launch OSGi war from Maven; not sure if it is necessary in our context -->
