			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-resources-plugin</artifactId>
				<version>2.4.2</version>
				<executions>
					<execution>
						<id>default-copy-resources</id>
						<phase>process-resources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<overwrite>true</overwrite>
							<outputDirectory>${project.build.directory}</outputDirectory>
							<resources>
								<resource>
									<directory>${project.basedir}/src</directory>
									<includes>
										<include>packageLinkDefs.properties</include>
									</includes>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
                        
               
                        <!-- Still guessing this is no longer needed with this version of Jetty, but we'll see -->
                        <plugin>
                        
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
                                <version>6.1.25</version>
				<configuration>
					<contextPath>/</contextPath>
					<scanIntervalSeconds>5</scanIntervalSeconds>
					<systemProperties>
						  <!--
								http://docs.codehaus.org/display/JETTY/Configuring+Connectors
								
								"The particular interface to listen on. If not set or 0.0.0.0, 
								jetty will listen on #port on all interfaces."
								
								If we do not set here, Jetty seems to think value is "set",
								but not in a way that allows remote client access.  So, we
								explicitly set it to 0.0.0.0.
                                                   -->             
						
						<systemProperty>
							<name>jetty.host</name>
							<value>0.0.0.0</value>
						</systemProperty>
					</systemProperties>
				</configuration>
			</plugin>
                     
		</plugins>
